<div>
  <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
  <fieldset>
    <legend></legend>
    <div class="container">

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form role="form">
			<fieldset>
				<h2>Please Sign In</h2>
				<hr class="colorgraph">
				<div class="form-group">
          <%= label_tag :Username, 'Name' %>
          <%= text_field_tag :username,params[:name],class:"form-control input-lg" %>
				</div>
				<div class="form-group">
          <%= label_tag :password, 'Password' %>
          <%= password_field_tag :password,params[:password],class:"form-control input-lg" %>
				</div>
			<!--	<span class="button-checkbox">
					<button type="button" class="btn" data-color="info">Remember Me</button>
					<a href="" class="btn btn-link pull-right">Forgot Password?</a>
				</span>-->
				<hr class="colorgraph">
				<div class="row">
					<div class="col-xs-6 col-sm-6 col-md-6">

                            <%= submit_tag "Login", class: "btn btn-lg btn-success btn-block" %>

					</div>
					<div class="col-xs-6 col-sm-6 col-md-6">
            <%= link_to "Register", signup_path,class:"btn btn-lg btn-primary btn-block" %>

					</div>
				</div>
			</fieldset>
		</form>
	</div>
</div>

</div>
    <div>
  </div>
  <div>
</div>
    </fieldset>
    <% end %>
</div>
