  <h1>New User</h1>


      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <%= form_for(@user, url: sign_path,:html =>{:multipart => true }) do |f| %>
        <% if @user.errors.any? %>
  <div id="error_explanation">
	  <div class="alert alert-danger">
		  The form contains <%= pluralize(@user.errors.count, "error") %>.
	  </div>
	  <ul>
		  <% @user.errors.full_messages.each do |msg| %>
			  <li><%= msg %></li>
		  <% end %>
	  </ul>
  </div>
<% end %>
  			<h2>Please Sign Up <small>It's free and always will be.</small></h2>
  			<hr class="colorgraph">
  			<div class="row">
  				<div class="col-xs-12 col-sm-6 col-md-6">
  					<div class="form-group">
              <%= f.label :first_name %><br>
              <%= f.text_field :name, class: 'form-control input-lg' %>
  					</div>
  				</div>
  				<div class="col-xs-12 col-sm-6 col-md-6">
  					<div class="form-group">
              <%= f.label :email %><br>
              <%= f.email_field :email, class: 'form-control input-l' %>
  					</div>
  				</div>
  			</div>
  			<div class="form-group">
          <%= f.label :user_name %><br>
          <%= f.text_field :username, class: 'form-control input-lg' %>
        			</div>
              <div class="field">
                <%= f.label :image %><br/>
                <%= f.file_field :image %>
              </div>

  			<div class="row">
  				<div class="col-xs-12 col-sm-6 col-md-6">
  					<div class="form-group">
              <%= f.label :password %><br>
              <%= f.password_field :password, class: 'form-control input-lg' %>
  					</div>
  				</div>
  				<div class="col-xs-12 col-sm-6 col-md-6">
  					<div class="form-group">
              <%= f.label :password_confirmation, "Confirmation" %><br>
              <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>

  					</div>
  				</div>
  			</div>
        <hr class="colorgraph">

  			<div class="row">

  				<div class="col-xs-8 col-sm-12 col-md-6">

            <div style="display:inline-block">
              <%= f.submit "Register", class: "btn btn-primary btn-block btn-lg" %>
            </div>
            <div style="display:inline-block;margin:0px">
              <%= link_to "Sign in", login_path,class:"btn btn-success btn-block btn-lg" %>
            </div>

          </div>
  			</div>


  		  <% end %>
  	</div>
  </div>

  <%= link_to 'Back', users_path %>
